rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if true; // Allow for demo user access
    }
    
    // Detections - users can read/write their own detections
    match /detections/{document} {
      allow read, write: if true; // Allow for demo functionality
    }
    
    // Transactions - users can read/write their own transactions
    match /transactions/{document} {
      allow read, write: if true; // Allow for demo functionality
    }
    
    // Stats - users can read/write their own stats
    match /stats/{document} {
      allow read, write: if true; // Allow for demo functionality
    }
    
    // Achievements - users can read/write their own achievements
    match /achievements/{document} {
      allow read, write: if true; // Allow for demo functionality
    }
  }
}